{
    "title": "Protobuf-net tests",
    "version": "1.0.0-alpha",
    "description": "Protobuf-net tests",
    "authors": [ "Marc Gravell" ],
    "tags": [ "tests" ],
    "projectUrl": "",
    "licenseUrl": "",

    "dependencies": {
        "protobuf-net": "2.1.0-alpha",
        "xunit": "2.1.0-beta2-build2981",
        "xunit.runner.dnx": "2.1.0-beta2-build79"
    },
    "exclude": [ "*.dll", "../Examples/*/Settings.Designer.cs" ],
    "commands": {
        "test": "xunit.runner.dnx"
    },
    "compile": [
        "../Examples/**/*.cs"
    ],
    //"../Examples/*.cs",
    //"../Examples/NWind/*.cs",
    //"../Examples/Ppt/Ppt.cs",
    //"../Examples/SimpleStream/*.cs"
    "compilationOptions": { "define": [ "DNXRUNNER" ] },
    "frameworks": {
        "dnx451": {
            "compilationOptions": { "define": [ "NET_3_0", "NET_3_5" ] },
            "frameworkAssemblies": {
                "System.Runtime.Serialization": "4.0.0.0",
                "System.Data.Linq": "4.0.0.0",
                "System.Data": "4.0.0.0",
                "System.ServiceModel": "4.0.0.0",
                "System.Runtime.Serialization.Formatters.Soap": "4.0.0.0",
                "System.Linq": "4.0.0.0",
                "System.Drawing": "4.0.0.0",
                "PresentationCore": "4.0.0.0",
                "WindowsBase": "4.0.0.0",
                "System.Web.Extensions": "4.0.0.0"
            }
        },
        "dnxcore50": {
            "dependencies": {
                "System.Console": "4.0.0-beta-*",
                "System.Collections": "4.0.10-beta-*",
                "System.Linq": "4.0.0-beta-*",
                "System.Threading": "4.0.10-beta-*",
                "Microsoft.CSharp": "4.0.0-beta-*",
                "System.Runtime.Serialization.Xml": "4.0.10-beta-*",
                "System.Data.Common": "4.0.0-beta-*",
                "System.Data.SqlClient": "4.0.0-beta-*",
                "System.Globalization": "4.0.10-beta-*"
            }
        }
    }
}
